<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.SinglePlayerActivity"
    android:background="@drawable/gamebackground">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:tag="0"
            android:textColor="@color/black"
            android:textSize="55dp"

            android:background="@drawable/buttonplay"
            tools:text="0" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:tag="1"
            android:textColor="@color/black"
            android:textSize="55dp"
            android:background="@drawable/buttonplay"
            tools:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:tag="2"
            android:textColor="@color/black"
            android:textSize="55dp"
            android:background="@drawable/buttonplay"
            tools:text="2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:tag="3"
            android:textColor="@color/black"
            android:textSize="55dp"
            android:background="@drawable/buttonplay"
            tools:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:tag="4"
            android:textColor="@color/black"
            android:textSize="55dp"
            android:background="@drawable/buttonplay"
            tools:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:tag="5"
            android:textColor="@color/black"
            android:textSize="55dp"
            android:background="@drawable/buttonplay"
            tools:text="5" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:tag="6"
            android:textColor="@color/black"
            android:textSize="55dp"
            android:background="@drawable/buttonplay"
            tools:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:tag="7"
            android:textColor="@color/black"
            android:textSize="55dp"
            android:background="@drawable/buttonplay"
            tools:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Button8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            android:tag="8"
            android:textColor="@color/black"
            android:textSize="55dp"
            android:background="@drawable/buttonplay"
            tools:text="8" />


    </LinearLayout>

    <TextView
        android:id="@+id/UserTurnTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/purple_500"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:text="User Turn" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/RestartGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Restart Game"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:background="@color/purple_my_color"
       />


</LinearLayout>